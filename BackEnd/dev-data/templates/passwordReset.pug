extends emailTemplate

block content
  p Hi #{firstName},
                             
                              p Forgot your password? Submit a PATCH request with password and passwordConfirm to this : #{url}
                              table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                tbody
                                  tr
                                    td(align='left')
                                      table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                        tbody
                                          tr
                                            td
                                              a(href=`${url}`, target='_blank') Reset your password
                              p Ignore this message if you didn't forget your password!
                              
